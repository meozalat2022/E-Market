extends layouts/main-layout.pug
block styles
    link(rel="stylesheet", href="/css/product.css")
    //- title #{title}
block content
    main 
        if prods.length >0
            .grid 
                each product in prods
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{product.title}
                        .card__image 
                            img(src="https://th.bing.com/th/id/OIP.OoAl690Iup8yqMEjOSHdWgHaJv?rs=1&pid=ImgDetMain", alt="Great Book")
                        .card__content 
                            h2.product__price $20.25
                            p.product__description A Very Amusing Novel To Read
                        .card__actions 
                        button.btn Add To Cart
        else 
            h1 No Products to Show